{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,

    "rootDir": "./src",
    "outDir": "./lib",
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "src/**/*",
      "src/typings/**/*"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/test/*"
  ]
}